/* detail.wxss */
#bookInfo-imgView{
	float:left;
	width:300rpx;
	height:350rpx;
}
#bookInfo-infoView{
	margin-left: 330rpx;
	width:350rpx;
	height:350rpx;
  position: relative;
}
#bookInfo-info-title{
  height: 130rpx;
}
#bookInfo-info-author{
  height: 50rpx;
}
#bookInfo-info-surplus{
  height: 50rpx;
}
#bookInfo-info-rating{
  height: 50rpx;
}
.swiper-tab{
  width:730rpx;
  border-top: 1px solid #999999;
  padding:0 10rpx;
}

.swiper-tab-list{
  display: inline-block;
  width:33%;
  text-align: center;
  padding: 20rpx 0;
  color: #555555;
}
.swiper-tab-list-selected{
  border-bottom: 3rpx solid #FF7F00;
  color: #333333;
}
.bookInfo-summary{
  padding:5rpx 20rpx;
}
.bookInfo-summary-text{
  text-indent: 2em;
  height: 250rpx;
  color: #545454;
}
#recommendBookView{
  width: 750rpx;
  margin-top: 20rpx;
  border-top: 1px solid #999999;

}
.recommendBook-item{
  display: inline-block;
  width: 240rpx;
  float:left;
  height: 400rpx;
  overflow: hidden;
  text-align: center;
  margin-bottom: 20rpx;
}
.recommendBook-item-title{
  color: #999;
  font-size: 0.8em;
}
#commentView{
  padding: 20rpx;
  position: relative;
}
#comment-input{
  margin: 0;
  border:1px solid #CCC;
  width: 675rpx;
  height: 200rpx;
  padding: 10rpx 20rpx;
}
.comment-userInfo{
  height: 80rpx;
}
.comment-userHead{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  float:left;
}
.comment-item{
  width: 675rpx;
  min-height: 100rpx;
  padding: 10rpx 20rpx;
}
.comment-item-nickname{

}
.comment-item-time{
  float: right;
  color: #666666;
}
.comment-item-content{
  font-size: 0.8rem;
  color: #444444;
  margin-left: 100rpx;
  margin-top: 10rpx;
}
#bookDetail{
  padding:0 20rpx;
}
.bookDetail-name{
  display: block;
  margin:20rpx;
  font-size: 1.2em;
  text-align: center;
}
.bookDetail-key{
  color: #999;
  line-height: 60rpx;
}
.bookDetail-val{
  color: #444;
  line-height: 60rpx;
}